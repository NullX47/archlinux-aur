#!/bin/sh -e

# Fix license
openssl genrsa -out key.pem 2048
openssl rsa -in key.pem -outform PEM -pubout -out public.pem
sudo mv public.pem /opt/cxoffice/share/crossover/data/tie.pub
openssl dgst -sha256 -sign key.pem -out license.sha256 license.txt
sudo cp -f license.txt /opt/cxoffice/etc/
sudo mv license.sha256 /opt/cxoffice/etc/
rm key.pem
